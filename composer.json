{
    "name": "jjgrainger/collection",
    "description": "Simple collections in PHP",
    "homepage": "https://github.com/jjgrainger/collection",
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Grainger",
            "email": "hello@jjgrainger.co.uk",
            "homepage": "http://jjgrainger.co.uk"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "Collection\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs --standard=psr2 src",
        "phpunit": "./vendor/bin/phpunit",
        "phpunit:coverage": "./vendor/bin/phpunit --coverage-clover=coverage.xml",
        "phpstan": "phpstan analyse src"
    }
}
